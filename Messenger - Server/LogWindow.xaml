<Window x:Class="Messenger___Server.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messenger___Server"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="#222222"
        Title="Вконтакте | (Логи)" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Логи чата" TextAlignment="Center" FontSize="20" Margin="10" FontWeight="Bold" Foreground="White"/>
        <Rectangle Grid.Row="0" Height="2" Fill="White" VerticalAlignment="Bottom" Margin="10,0"/>
        <ListBox x:Name="logsChatLbx" Grid.Row="1" Foreground="White"/>
    </Grid>
</Window>